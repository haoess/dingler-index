<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de" lang="de">
<head>
  <meta name="robots" content="noindex,nofollow" />
  <base href="[% base %]" />
  <link rel="stylesheet" type="text/css" href="static/jquery/jquery-ui-1.8.1.custom.css" />
  <link rel="stylesheet" type="text/css" href="static/styles.css" />
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js"></script>
</head>

<body>

<div id="head">
  <div class="project">Interne Projektseite</div>
  <div class="logo">
    <a href="[% base %]"><img src="[% base %]static/images/dinglerlogo.gif" /></a>
  </div>
  <div class="partner">
    <a href="http://www.dfg.de/"><img src="[% base %]static/images/partner_dfg.gif" /></a>
    <a href="http://www.slub-dresden.de/"><img src="[% base %]static/images/partner_slub.gif" /></a>
    <a href="http://www.hu-berlin.de/"><img src="[% base %]static/images/partner_huberlin.gif" /></a>
  </div>
</div>

<table id="maintable">
  <colgroup>
    <col width="200" />
    <col width="800" />
    <col width="200" />
  </colgroup>
  <tr>
    <td class="mainleft">
      Band ausw√§hlen:&nbsp;
      <select name="" onchange="window.location='journal/' + this.value;">
        <option value="">...</option>
        [% FOREACH v IN volumes %]
          <option value="[% v %]"[% ' selected="selected"' IF v == journal %]>[% v %]</option>
        [% END %]
      </select>
      <br /><br />

    </td>
    <td class="mainmiddle">[% content %]</td>
    <td class="mainright">
      <div id="htmltagcloud">
        [% FOREACH tag IN cloud.tags(20) %]
          <span class="tagcloud[% tag.level %]">[% tag.name %]</span>
        [% END %]
      </div>
    </td>
  </tr>
</table>

</body>
</html>
